// Milestone (when displayed in the timeline)
body.home

  section
    @media $handheld
      background: url("-/assets/timeline.png") 1.5rem 0 repeat-y

    @media $desktop
      padding-bottom: 7rem
      text-align: center
      background: $trans_white

    header
      @media $handheld
        padding: 0.3rem 0 0 4rem
        background: url("-/assets/milestone.svg") 0.5rem 0 no-repeat

    h1
      @media $handheld
        font-size: 2rem

      @media $desktop
        padding-top: 4rem
        font-size: 2rem
        text-align: center
        background: url("-/assets/milestone.svg") top center no-repeat

    h2
      font-weight: 100

      @media $handheld
        color: #BBB
        font-size: 1.6rem

      @media $desktop
        margin-bottom: 2rem
        font-size: 1.5rem

    article
      @media $handheld
        margin-top: 2rem
        padding: 0 0 4rem 4rem

      @media $desktop
        width: 66%
        margin: auto

      p
        @media $handheld
          margin-bottom: 1rem

        @media $desktop
          margin-bottom: 2rem

    &:last-child
      @media $desktop
        padding-bottom: 10rem
        background-image: url("-/assets/footer.png")
        background-position: bottom center
        background-repeat: repeat-x
